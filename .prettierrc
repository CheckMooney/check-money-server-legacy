{
  "overrides": [
        {
            "files": "*.js",
            "options": {
                "arrowParens": "avoid",
                "jsxSingleQuote": true,
                "jsxBracketSameLine": true,
                "singleQuote": true,
                "semi": true,
                "bracketSpacing": true,
                "useTabs": false,
                "tabWidth": 2,
                "trailingComma": "all",
                "printWidth": 80,
                "endOfLine": "auto"
            }
        },
        {
            "files": "*.ts",
            "options": {
                "arrowParens": "avoid",
                "jsxSingleQuote": true,
                "jsxBracketSameLine": true,
                "singleQuote": true,
                "semi": true,
                "bracketSpacing": true,
                "useTabs": false,
                "tabWidth": 2,
                "trailingComma": "all",
                "printWidth": 100,
                "endOfLine": "auto"
            }
        }
    ]
}